
<link href="http://vjs.zencdn.net/c/video-js.css" rel="stylesheet">
<script src="http://vjs.zencdn.net/c/video.js"></script>



<video id="example_video_1" class="video-js vjs-default-skin"
       width="<%= @video.config[:width] %>" height="<%= @video.config[:height] %>"
       controls="<%= @video.config[:controls] || "auto" %>"
       data-setup=' {"autoplay": <%= @video.config[:autoplay] || "auto" %>,
       "preload": <%= @video.config[:preload] || "auto" %>,
       "loop": <%= @video.config[:loop] || "auto" %>,
       "poster": <%= @video.config[:poster] || "auto" %>}'>
  <source src="<%= @video.url %>" type="<%= @video.mime_type %>" />
</video>

