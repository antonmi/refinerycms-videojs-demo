<% content_for :body_content_title do %>
  <%= @video.file_name %>
<% end %>

<% content_for :body_content_left do %>
  <section>
    <h1>File Name</h1>
    <p>
      <%=raw @video.file_name %>
    </p>
  </section>
  <section>
    <h1>File Size</h1>
    <p>
      <%=raw @video.file_size %>
    </p>
  </section>
  <section>
    <h1>File Ext</h1>
    <p>
      <%=raw @video.file_ext %>
    </p>
  </section>
<% end %>

<% content_for :body_content_right do %>
  <aside>
    <h2><%= t('.other') %></h2>
    <ul id="videos">
      <% @videos.each do |video| %>
        <li>
          <%= link_to video.file_name, refinery.videos_video_path(video) %>
        </li>
      <% end %>
    </ul>
  </aside>
<% end %>

<%= render '/refinery/content_page' %>
